@Composable
fun ForecastedWeatherChip(
    hourlyTime: String, hourlyTemperature: Double,
) {
    Column(
        horizontalAlignment = Alignment.CenterHorizontally
    ) {
        Text(text = hourlyTime)
        Text(text = hourlyTemperature.toString())
    }
}